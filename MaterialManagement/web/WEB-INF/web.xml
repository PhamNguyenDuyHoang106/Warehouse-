<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>controller.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SigupServlet</servlet-name>
        <servlet-class>controller.SigupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SigupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>controller.EmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <servlet-class>controller.EditEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServletDemo</servlet-name>
        <servlet-class>controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>controller.AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateServlet</servlet-name>
        <servlet-class>controller.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <url-pattern>/EditEmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServletDemo</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <!-- Currency Management Servlets -->
    <servlet>
        <servlet-name>CurrencyServlet</servlet-name>
        <servlet-class>controller.CurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/CurrencyList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/AddCurrency</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/EditCurrency</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/DeleteCurrency</url-pattern>
    </servlet-mapping>

    <!-- Tax Invoice Management Servlets -->
    <servlet>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <servlet-class>controller.TaxInvoiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <url-pattern>/TaxInvoiceList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <url-pattern>/AddTaxInvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <url-pattern>/EditTaxInvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <url-pattern>/DeleteTaxInvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <url-pattern>/ViewTaxInvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaxInvoiceServlet</servlet-name>
        <url-pattern>/GenerateTaxInvoice</url-pattern>
    </servlet-mapping>

    <!-- Welcome file configuration -->
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>

    <!-- MySQL Cleanup Listener: Shutdown AbandonedConnectionCleanupThread when application stops -->
    <listener>
        <listener-class>utils.MySQLCleanupListener</listener-class>
    </listener>
</web-app>
